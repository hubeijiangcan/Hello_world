<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_forty"
        android:background="@color/colorPrimary"
        android:text="手机防盗"
        android:gravity="center"
        android:textSize="@dimen/text_size_l"
        android:textColor="@color/white"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_sixty"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全号码"
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5566"
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/need_999"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_sixty"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防盗保护是否开启"
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/unlock"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/need_999"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_reset"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_sixty"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新进入设置向导"
            android:textSize="@dimen/text_size_m"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/need_999"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_forty"
        android:background="@color/need_666"
        android:layout_marginTop="@dimen/margin_s"
        android:layout_marginLeft="@dimen/margin_s"
        android:text="功能简介"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_m"
        />
    <TextView
        style="@style/set_text"
        android:text="GPS追踪:#*location*#"
        />
    <TextView
        style="@style/set_text"
        android:text="播放报警音乐:#*alarm*#"
        />

    <TextView
        style="@style/set_text"
        android:text="远程删除数据:#*wipedata*#"
        />
    <TextView
        style="@style/set_text"
        android:text="远程锁屏:#*lockscreen*#"
        />
</LinearLayout>