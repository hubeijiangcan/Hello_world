<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jc="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_forty"
        android:background="@color/head"
        android:textSize="@dimen/margin_xl"
        android:text="设置中心"
        android:gravity="center"
        />
    <com.mitbbs.summary.view.SettingItemView
        android:id="@+id/siv_isUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        jc:update_on="自动更新已经开启"
        jc:update_off="自动更新已经关闭"
        jc:setting_title = "设置自动更新"
        ></com.mitbbs.summary.view.SettingItemView>
    <com.mitbbs.summary.view.SettingItemView
        android:id="@+id/siv_setNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        jc:setting_title = "设置号码归属地"
        jc:update_on="号码归属地已经开启"
        jc:update_off="号码归属地已经关闭"
        ></com.mitbbs.summary.view.SettingItemView>
</LinearLayout>